<h1 class="text-center">Create a restaurant</h1>

<%= simple_form_for(@restaurant) do |f| %>
     <%= f.input :name %>
     <%= f.input :address %>
     <%= f.input :phone_number %>
     <%= f.input :category %>
  <%= f.submit "Save the restaurant", class: 'btn btn-primary' %>
<% end %>


<div class="links border-top">
  <%= link_to "Back to the list", restaurants_path, class: 'btn btn-info' %>
</div>
